[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    alembic/versions,
    migrations,
    build,
    dist,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .coverage

ignore = 
    E203,
    E501,
    W503,
    W504

# Complexity
max-complexity = 10

# Docstring conventions
docstring-convention = google

per-file-ignores =
    __init__.py:F401,F403
    test_*.py:F401,F811
